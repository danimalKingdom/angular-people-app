<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">
    
    <p>People Count: {{ peopleCount }}</p>

    <button ng-click="toggleOrder('name')">Order by Name</button>
    <button ng-click="toggleOrder('id')">Order by Id</button>
    <p>orderAttribute: {{orderAttribute}}</p>
    <p>Desceding boolean: {{descending}}</p>

    <input ng-model="nameFilter">
    <div ng-repeat="person in people | filter: nameFilter | orderBy: orderAttribute:descending">
      <h3 ng-click="toggleBio(person)">{{ person.name}}</h3>
      <p ng-class="{strike: person.bioVisible}" ng-if="person.bioVisible">{{ person.bio }}</p>
      <button ng-click="deletePerson(person)">Delete</button>
    </div>

    
    <h3>Errors:</h3>
    <ul>
      <li ng-repeat="error in errors">{{error}}</li>
    </ul>

    <h3>New Person:</h3>
    Person Name: <input ng-model="newPersonName"><br>
    Person Bio: <input ng-model="newPersonBio"><br>
    <button ng-click="addPerson(newPersonName, newPersonBio)">Add Person</button>

  </div>
</div>